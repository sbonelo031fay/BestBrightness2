@page
@model BestBrightnesss.Pages.Sales.SaleDetailsModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(45deg, red 50%, black 50%);
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
            margin: 0;
            padding-top: 5rem;
            padding-bottom: 10rem;
        }

        .details-container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 800px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            background-color: #f9f9f9;
            margin-bottom: 20px;
        }

            .card h3 {
                margin-bottom: 20px;
            }
    </style>
</head>
<body>
    <section class="d-flex col-md-12 justify-content-center align-items-center">
        <div class="details-container">
            <h2>@ViewData["Title"]</h2>
            @if (Model.DailySalesReports.Any())
            {
                @foreach (var report in Model.DailySalesReports)
                {
                    <div class="card">
                        <h3>Sales Date: @report.Date.ToString("yyyy-MM-dd HH:mm")</h3>
                        <p><strong>Total Sales:</strong> @report.TotalSales.ToString("C")</p>
                        <p><strong>Products Sold:</strong> @report.ProductName</p>
                        <p><strong>Products Sold:</strong> @report.ProductsSold</p>
                        <p><strong>Sales By:</strong> @report.SalesByEmployee</p>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <p>No sales data available.</p>
                </div>
            }
            <button type="button" class="btn btn-secondary back-button" onclick="history.back()">Back</button>
        </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
