@page
@model BestBrightnesss.Pages.Profile.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Best Brightness</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-ZoLJ8T+j7VQ+2KMBj35+QnKb+MMvT7mNcGRZRI8CGL1QOcOjx+fuw/58Jk7nuwqE" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(45deg, red 50%, black 50%);
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100vh;
            margin: 0;
            padding: 0;
        }

        .register-container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 40px;
            max-width: 400px;
            width: 100%;
        }

            .register-container h2 {
                text-align: center;
                margin-bottom: 30px;
                font-size: 2rem;
            }

            .register-container .form-group {
                margin-bottom: 20px;
            }

            .register-container .btn-primary {
                background-color: #d9534f;
                border-color: #d9534f;
                width: 100%;
            }

        section {
            display: flex;
            width: 100%;
            height: 100%;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <section>
        <div class="register-container">
            <h2>Register</h2>
            <form method="post" asp-page="Register" id="registerForm">

                <div class="form-group">
                    <label for="title">Title<strong style="color:red">*</strong></label>
                    <select class="form-control" id="title" asp-for="Input.Title">
                        <option value="">Select Title</option>
                        <option value="Mr.">Mr.</option>
                        <option value="Ms.">Ms.</option>
                        <option value="Mrs.">Mrs.</option>
                        <option value="Dr.">Dr.</option>
                        <option value="Prof.">Prof.</option>
                    </select>
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="firstName">First Name <strong style="color:red">*</strong></label>
                    <input type="text" class="form-control" id="firstName" asp-for="Input.FirstName"/>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="lastName">Last Name <strong style="color:red">*</strong></label>
                    <input type="text" class="form-control" id="lastName" asp-for="Input.LastName" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="email">Email Address <strong style="color:red">*</strong></label>
                    <input type="email" class="form-control" id="email" asp-for="Input.Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="contactNumber">Contact Number <strong style="color:red">*</strong></label>
                    <input type="text" class="form-control" id="contactNumber" asp-for="Input.ContactNumber" />
                    <span asp-validation-for="Input.ContactNumber" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary">Register</button>

            </form>
        </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-B4gt1jrGC7Jh4AgS9FMRbApSEjdK1it/c7k4bImID6sEE1sDzNJpVOpzyYfR7U3i" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
